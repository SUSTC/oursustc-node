extends ../common/layout

block bodyheader
  div.segment
    div.container#overview
      div.introduction
        h1.ui.dividing.header
          i.dashboard.icon
          = title

block content
  .ui.segment
    .dashboard-links
      .ui.animated.list
        a.item(href="/dashboard/consts")
          i.code.icon
          .content
            .header= lang.dashboard.consts
        a.item(href="/dashboard/user")
          i.users.icon
          .content
            .header= lang.dashboard.user_management
        a.item(href="/dashboard/board")
          i.comment.icon
          .content
            .header= lang.dashboard.board_management
      hr
      .ui.animated.list
        a.item(href="/dashboard/install")
          i.building.icon
          .content
            .header= lang.dashboard.install
