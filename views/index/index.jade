extends ../common/layout

block stylesheet
  link(rel='stylesheet', href=base.rooturl + '/static/css/index.css?v=#{version.css}')

block script
  script(type='text/javascript' src=base.rooturl + '/static/js/jquery.easing.min.js?v=#{version.js}')
  script(type='text/javascript' src=base.rooturl + '/static/js/index.js?v=#{version.js}')

block bodyheader
  //.masthead.segment
    .ui.page.grid
      .column
        .introduction
          h1.ui.header SUSTC

block bg-content
  //#bg_album_area
    #bg_album
      .slider-wrapper
        #slider-1
          #slider-content
          #slider-feed

block content
  //#index_album
    .slider-wrapper
      #slider-1
        #slider-content
          .slider_info_holder
    .simple-wrapper
      table.ui.table.segment
        tbody
  #index_message
    .ui.segment#news
      .ui.top.attached.label
        i.browser.icon
        = lang.topic.latest_topics
      .ui.selection.divided.list
        if (latest_topics && latest_topics.length > 0)
          each t in latest_topics
            a.item(href=base.rooturl + '/topic/' + t._id)
              .content
                .header= t.title
              //span.time.pull-right= t.friendly_create_at
        else
          .ui.message
            p= lang.topic.topics_not_found

